<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello Word\n</text>
<text>你好小程序\n</text>

<!-- 2.seletable: true -->
<!-- 默认情况下,text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hello Yishan\n</text>
<text selectable>Hello Yishan\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<text>Hello Word\n</text>
<text space="nbsp">Hello Word\n</text>
<text space="ensp">Hello Word\n</text>
<text space="emsp">Hello Word\n</text>

<!-- 4.decode属性: 是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>